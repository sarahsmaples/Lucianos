<footer class="bg-gray-900 text-white">
  <div class="w-full max-w-screen-xl mx-auto px-4 py-10">
    <div class="grid gap-8 md:grid-cols-3">
      <!-- Branding -->
      <div>
        <a href="{{ '/' | url }}" class="text-2xl font-bold text-primary-500">Luciano's Pizzeria</a>
        <p class="mt-3 text-gray-400 text-sm">Serving West Haverstraw with authentic Italian pizza and more.</p>
      </div>

      <!-- Quick Links -->
      <div>
        <h3 class="text-sm font-semibold uppercase tracking-wider text-gray-400 mb-4">Quick Links</h3>
        <ul class="space-y-2 text-sm">
          <li><a href="{{ '/' | url }}" class="text-gray-300 hover:text-white">Home</a></li>
          <li><a href="{{ '/menu/' | url }}" class="text-gray-300 hover:text-white">Menu</a></li>
          <li><a href="{{ client.orderOnline }}" target="_blank" rel="noopener noreferrer" class="text-gray-300 hover:text-white">Order Online</a></li>
          <li><a href="{{ '/' | url }}#contact" class="text-gray-300 hover:text-white">Contact</a></li>
        </ul>
      </div>

      <!-- Contact Info -->
      <div>
        <h3 class="text-sm font-semibold uppercase tracking-wider text-gray-400 mb-4">Contact</h3>
        <address class="not-italic text-sm text-gray-300 space-y-2">
          <p>{{ client.address.street }}<br>{{ client.address.city }}, {{ client.address.state }} {{ client.address.zip }}</p>
          <p>
            <a href="tel:{{ client.phone }}" class="hover:text-white">{{ client.phone }}</a><br>
            <a href="tel:{{ client.phone2 }}" class="hover:text-white">{{ client.phone2 }}</a>
          </p>
          <p>{{ client.hours.weekday }}<br>{{ client.hours.weekend }}</p>
        </address>
      </div>
    </div>

    <hr class="my-8 border-gray-700"/>
    <span class="block text-sm text-gray-500 text-center">&copy; {{ global.currentYear }} {{ client.name }}. All Rights Reserved.</span>
  </div>
</footer>
