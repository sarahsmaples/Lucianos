<!DOCTYPE html>
<html lang="en" class="scroll-smooth">
  <head>
    <!-- Standard meta tags -->
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="{{ description }}">
    <meta name="keywords" content="pizza, Italian food, pizzeria, West Haverstraw, NY, delivery, takeout">
    <link rel="canonical" href="{{ client.domain }}{{ page.url }}">

    <!-- Social Media Display -->
    <meta property="og:title" content="{{ title }} | {{ client.name }}"/>
    <meta property="og:description" content="{{ description }}"/>
    <meta property="og:type" content="website"/>
    <meta property="og:url" content="{{ client.domain }}{{ page.url }}"/>
    <meta property="og:image" content="{{ '/assets/images/og-image.webp' | url }}"/>
    <meta property="og:image:secure_url" content="{{ '/assets/images/og-image.webp' | url }}"/>

    <!-- Favicons -->
    <link rel="icon" href="{{ '/assets/images/favicons/favicon.ico' | url }}" sizes="48x48">
    <link rel="apple-touch-icon" sizes="180x180" href="{{ '/assets/images/favicons/apple-touch-icon.png' | url }}">
    <link rel="icon" type="image/png" sizes="32x32" href="{{ '/assets/images/favicons/favicon-32x32.png' | url }}">
    <link rel="icon" type="image/png" sizes="16x16" href="{{ '/assets/images/favicons/favicon-16x16.png' | url }}">
    <link rel="manifest" href="{{ '/assets/images/favicons/site.webmanifest' | url }}">
    <meta name="msapplication-TileColor" content="#c2102d">
    <meta name="theme-color" content="#c2102d">

    <!-- Sitewide Stylesheets and Scripts -->
    <link rel="stylesheet" href="{{ '/assets/css/styles.css' | url }}">

    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Nunito:ital,wght@0,200..1000;1,200..1000&family=Rammetto+One&family=Roboto:ital,wght@0,100..900;1,100..900&family=Staatliches&display=swap" rel="stylesheet">

    {% block head %}{% endblock %}

    <title>{{ title }} | {{ client.name }}</title>

    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "Restaurant",
        "name": "{{ client.name }}",
        "url": "{{ client.domain }}",
        "telephone": "{{ client.phone }}",
        "address": {
          "@type": "PostalAddress",
          "streetAddress": "{{ client.address.street }}",
          "addressLocality": "{{ client.address.city }}",
          "addressRegion": "{{ client.address.state }}",
          "postalCode": "{{ client.address.zip }}"
        },
        "servesCuisine": ["Italian", "Pizza"],
        "openingHours": ["Mo-Sa 11:00-22:00", "Su 12:00-21:00"]
      }
    </script>

  </head>

  <body class="{% block bodyClass %}{% endblock %}">
    {% include "components/header.njk" %}
    <main>
      {% block content %}{% endblock %}
    </main>
    {% block footer %}{% include "components/footer.njk" %}{% endblock %}
    <script src="{{ '/assets/js/main.js' | url }}"></script>
  </body>
</html>
